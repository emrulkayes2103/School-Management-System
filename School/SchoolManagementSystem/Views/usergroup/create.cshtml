@model SchoolManagementSystemMVC.Models.UserGroupModel

@{
    ViewBag.Title = "create";
}
@section TitleSection{
    <div class="col-md-12">
        <h2 style="margin:20px 0px; color:#818da1; font-weight:200;">
        <i class="fa fa-plus"></i>    Create
        </h2>
    </div>

}

@using (@Html.BeginForm("create", "usergroup", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @{
    string msg = TempData["successMsg"] as string;
    string Errmsg = TempData["ErrorMsg"] as string;
    if(!string.IsNullOrEmpty(msg))
    {
        <div class="alert alert-success">
            @msg
            </div>
    }
    if (!string.IsNullOrEmpty(Errmsg))
    {
        <div class="alert alert-warning">
            @Errmsg
        </div>
    }
}

            @Html.ValidationMessageFor(userGroup => userGroup.groupName)
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <i class="fa fa-users"></i>
                        User Group
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">
                                        <b> Group Name :</b>
                                    </label>
                                    <div>
                                        @Html.TextBoxFor(userGroup => userGroup.groupName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(userGroup => userGroup.groupName,"*")
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">
                                        <b> Description :</b> 
                                    </label>
                                    <div>
                                        @Html.TextBoxFor(userGroup => userGroup.groupDesc, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <input type="submit" value="Create" class="btn btn-info" /> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


