@model SchoolManagementSystem.Models.TeacherModel

@{
    ViewBag.Title = "Teacher";
}

@section TitleSection{
    <div class="col-md-12">
        <h2 style="margin:20px 0px; color:#818da1; font-weight:200;">
            <i class="fa fa-plus"></i>    Create Teacher
        </h2>
    </div>

}
@using (@Html.BeginForm("create", "teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-12">
            @{
    string msg = TempData["successMsg"] as string;
    string Errmsg = TempData["ErrorMsg"] as string;
    if(!string.IsNullOrEmpty(msg))
    {
        <div class="alert alert-success">
            @msg
        </div>
    }
    if (!string.IsNullOrEmpty(Errmsg))
    {
        <div class="alert alert-danger">
            @Errmsg
        </div>
    }
            }

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <i class="fa fa-user-md"></i>
                        Create Teacher
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Name :
                                    </label>
                                    <div>
                                        @Html.TextBoxFor(teacher => teacher.teacherName, new {@class = "form-control", required="required"})
                                        @Html.ValidationMessageFor(teacher => teacher.teacherName, "*")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Email :
                                    </label>
                                    <div>
                                        @Html.TextBoxFor(teacher => teacher.teacherEmail, new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(teacher => teacher.teacherEmail, "*")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Date od birth :
                                    </label>
                                    <div>
                                        @Html.TextBoxFor(teacher => teacher.teacherDob, new { @class = "form-control default-date-picker", required = "required" })
                                        @Html.ValidationMessageFor(teacher => teacher.teacherDob, "*")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Gender :
                                    </label>
                                    <div>
                                        @Html.DropDownListFor(teacher => teacher.teacherGender, new List<SelectListItem>()
                                        {
                                            new SelectListItem() {Text = "Male", Value = "Male"},
                                            new SelectListItem() {Text = "Female", Value = "Female"}
                                        }, "--Select Gender--", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(teacher => teacher.teacherGender, "*")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Permanent Address :
                                    </label>
                                    <div>
                                        @Html.TextAreaFor(teacher => teacher.teacherPermanentAdd, new { @class = "form-control", required = "required" })
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Present Address :
                                    </label>
                                    <div>
                                        @Html.TextAreaFor(teacher => teacher.teacherPresentAdd, new { @class = "form-control", required = "required" })
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Contact Number :
                                    </label>
                                    <div>
                                        @Html.TextBoxFor(teacher => teacher.teacherContuctNumber, new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(teacher => teacher.teacherContuctNumber, "*")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                       Password :
                                    </label>
                                    <div>
                                        @Html.PasswordFor(teacher => teacher.teacherpassword, new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(teacher => teacher.teacherpassword, "*")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Re-Type Password :
                                    </label>
                                    <div>
                                        @Html.PasswordFor(teacher => teacher.reTypeTeacherPass, new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(teacher => teacher.teacherpassword, "*")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Image :
                                    </label>
                                    <div>
                                        <input type="file" class="fileinput-inline" id="teacherImageFile" name="teacherImageFile"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <input type="submit" value="Add Teacher" class="btn btn-info"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section ScriptContent
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.default-date-picker').datepicker({ autoclose: true, format: "dd/mm/yyyy" });
        });
    </script>
}